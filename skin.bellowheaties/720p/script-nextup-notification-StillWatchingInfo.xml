<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">4012</defaultcontrol>
	<controls>
		<control type="group">
			<animation type="WindowOpen" reversible="false">
				<effect type="fade" start="0" end="100" time="400" tween="sine" easing="in"  />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="fade" start="100" end="0" time="300" tween="sine" easing="out" />
			</animation>
			<control type="image">
				<description>Vignette</description>
				<include>FullscreenDimensions</include>
				<texture background="true">windows/bg/bg_nextup_vignette.png</texture>			
				<include>BackgroundFade</include>
				<visible>!Skin.HasSetting(NextUpTop)</visible>
			</control>
			<control type="image">
				<description>Vignette</description>
				<include>FullscreenDimensions</include>
				<texture flipy="true" background="true">windows/bg/bg_nextup_vignette.png</texture>			
				<include>BackgroundFade</include>
				<visible>Skin.HasSetting(NextUpTop)</visible>
			</control>
			<control type="image" id="4001">
				<visible>false</visible>
			</control>
			<control type="image" id="4002">
				<visible>false</visible>
			</control>
			<control type="label" id="4003">
				<visible>false</visible>
			</control>
			<control type="label" id="4004">
				<visible>false</visible>
			</control>
			<control type="image" id="4005">
				<visible>false</visible>
			</control>
			<control type="textbox" id="4006">
				<visible>false</visible>
			</control>
			<control type="image" id="4007">
				<visible>false</visible>
			</control>
			<control type="label" id="4008">
				<visible>false</visible>
			</control>
			<control type="label" id="4009">
				<visible>false</visible>
			</control>
			<control type="label" id="4011">
				<visible>false</visible>
			</control>
			<!-- Main group -->

			<control type="group">				
				<animation effect="slide" start="0,0" end="0,-350" time="0" condition="Skin.HasSetting(NextUpTop)">Conditional</animation>
				<animation type="WindowOpen" reversible="false" condition="!Skin.HasSetting(NextUpTop)">
					<effect type="slide" start="0,150" end="0,0" time="450" delay="0" tween="sine" easing="out" />
					<effect type="fade" start="0" end="100" time="450" delay="0" tween="sine" easing="out" />
				</animation>
				<animation type="WindowClose" reversible="false" condition="!Skin.HasSetting(NextUpTop)">
					<effect type="slide" start="0,0" end="0,200" time="450" delay="0" tween="sine" easing="out" />
					<effect type="fade" start="100" end="0" time="450" delay="0" tween="sine" easing="out" />
				</animation>
				<animation type="WindowOpen" reversible="false" condition="Skin.HasSetting(NextUpTop)">
					<effect type="slide" start="0,-150" end="0,0" time="450" delay="0" tween="sine" easing="out" />
					<effect type="fade" start="0" end="100" time="450" delay="0" tween="sine" easing="out" />
				</animation>
				<animation type="WindowClose" reversible="false" condition="Skin.HasSetting(NextUpTop)">
					<effect type="slide" start="0,0" end="0,-200" time="450" delay="0" tween="sine" easing="out" />
					<effect type="fade" start="100" end="0" time="450" delay="0" tween="sine" easing="out" />
				</animation>
				<animation type="Visible" reversible="false" condition="!Skin.HasSetting(NextUpTop)">
					<effect type="slide" start="0,150" end="0,0" time="450" delay="0" tween="sine" easing="out" />
					<effect type="fade" start="0" end="100" time="450" delay="0" tween="sine" easing="out" />
				</animation>
				<animation type="Hidden" reversible="false" condition="!Skin.HasSetting(NextUpTop)">
					<effect type="slide" start="0,0" end="200" time="450" delay="0" tween="sine" easing="out" />
					<effect type="fade" start="100" end="0" time="450" delay="0" tween="sine" easing="out" />
				</animation>
				<animation type="Visible" reversible="false" condition="Skin.HasSetting(NextUpTop)">
					<effect type="slide" start="0,-150" end="0,0" time="450" delay="0" tween="sine" easing="out" />
					<effect type="fade" start="0" end="100" time="450" delay="0" tween="sine" easing="out" />
				</animation>
				<animation type="Hidden" reversible="false" condition="Skin.HasSetting(NextUpTop)">
					<effect type="slide" start="0,0" end="-200" time="450" delay="0" tween="sine" easing="out" />
					<effect type="fade" start="100" end="0" time="450" delay="0" tween="sine" easing="out" />
				</animation>
				<left>900</left>
				<top>400</top>
				<!-- image -->
				<control type="group">
					<left>-100</left>
					<control type="image">
						<left>-121</left>
						<top>-136</top>
						<width>687</width>
						<height>520</height>
						<texture background="true">views/episode/episode_blue_shadow.png</texture>
						<animation effect="fade" time="0" end="60" condition="true">Conditional</animation>
					</control>
					<control type="image">
						<left>0</left>
						<width>441</width>
						<height>248</height>
						<aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
						<texture background="true" diffuse="views/episode/episode_diffuse.png">thumbs/thumb_back.png</texture>
					</control>
					<control type="image" id="3008">
						<left>0</left>
						<width>441</width>
						<height>248</height>
						<aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
						<texture background="true" diffuse="views/episode/episode_diffuse.png">$INFO[Control.GetLabel(4002)]</texture>
						<fadetime>FanartCrossfadeTime</fadetime>
					</control>
					<control type="image">
						<left>0</left>
						<width>441</width>
						<height>248</height>
						<aspectratio aligny="center" align="center">stretch</aspectratio>
						<texture background="true" diffuse="views/episode/episode_diffuse.png">views/episode/episode_label.png</texture>
					</control>
					<control type="image">
						<left>0</left>
						<width>441</width>
						<height>248</height>
						<aspectratio aligny="center" align="center">stretch</aspectratio>
						<texture background="true">views/episode/episode_overlay.png</texture>
					</control>
					<!--thumb label-->
					<control type="label">
						<left>14</left>
						<top>165</top>
						<width>410</width>
						<height>50</height>
						<font>font30</font>
						<textcolor>white</textcolor>
						<shadowcolor>77000000</shadowcolor>
						<align>left</align>
						<aligny>bottom</aligny>
						<label>$INFO[Control.GetLabel(4008),$LOCALIZE[20373] ], $INFO[Control.GetLabel(4009),Ep. ]</label>
					</control>
					<control type="label" id="4000">
						<left>14</left>
						<top>195</top>
						<width>300</width>
						<height>50</height>
						<font>font11</font>
						<textcolor>77white</textcolor>
						<shadowcolor>77000000</shadowcolor>
						<align>left</align>
						<aligny>center</aligny>						
					</control>
					<!--remaining time-->
					<control type="label" description="Total Time">
						<right>50</right>
						<top>163</top>
						<height>68</height>
						<width>400</width>
						<align>right</align>
						<font>WeatherTemp</font>
						<textcolor>white</textcolor>
						<shadowcolor>55000000</shadowcolor>
						<label>$INFO[Player.TimeRemaining(ss),-]</label>
					</control>
					<!--buttons -->
					<control type="label">
						<left>1</left>
						<top>251</top>
						<width>330</width>
						<height>50</height>
						<font>font11</font>
						<textcolor>white</textcolor>
						<shadowcolor>77000000</shadowcolor>
						<align>left</align>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<label>$LOCALIZE[31393]</label>
					</control>
					<control type="group">
						<top>252</top>
						<right>24</right>
						<width>110</width>
						<height>55</height>
						<control type="button" id="4012">
							<description>Watch Now</description>
							<width>55</width>
							<height>55</height>
							<onright>4013</onright>
							<onleft>4013</onleft>
							<font>FontSize_24</font>
							<align>center</align>
							<label>-</label>
							<textoffsetx>64</textoffsetx>
							<texturefocus>osd/play_fo.png</texturefocus>
							<texturenofocus>osd/play_nf.png</texturenofocus>
						</control>
						<control type="button" id="4013">
							<description>Cancel</description>
							<left>47</left>
							<width>55</width>
							<height>55</height>
							<onright>4012</onright>
							<onleft>4012</onleft>
							<font>FontSize_24</font>
							<align>center</align>
							<label>-</label>
							<textoffsetx>64</textoffsetx>
							<texturefocus>osd/stop_fo.png</texturefocus>
							<texturenofocus>osd/stop_nf.png</texturenofocus>
						</control>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>