<?xml version="1.0" encoding="utf-8"?>
<window>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	<controls>
		<control type="group">
			<include>transition_Info</include>
			<visible>Player.HasVideo + !Skin.HasSetting(mediaoverlay.disable) + ![Window.IsActive(infodialog) | Window.IsActive(extendedprogressdialog) | Window.IsActive(home) | Window.IsActive(fullscreenvideo) | Window.IsActive(busydialog)]</visible>
			<control type="grouplist">
				<top>17</top>
				<height>45</height>
				<orientation>Vertical</orientation>
				<itemgap>-5</itemgap>
				<control type="label" id="201">
					<right>70</right>
					<label>$INFO[VideoPlayer.Title]</label>
					<include>toast_Top</include>
					<visible>!VideoPlayer.Content(LiveTV)</visible>
				</control>
				<control type="label" id="201">
					<right>70</right>
					<label>$INFO[VideoPlayer.ChannelName]$INFO[VideoPlayer.Title,: ]</label>
					<include>toast_Top</include>
					<visible>VideoPlayer.Content(LiveTV)</visible>
				</control>
				<control type="label" id="201">
					<right>70</right>
					<label>$VAR[toast:Video]</label>
					<include>toast_Bottom</include>
				</control>
			</control>
			<control type="image">
				<include>toast_Icon</include>
				<texture>toast/play.png</texture>
				<visible>!Player.Muted + IntegerGreaterThan(Player.Volume,0)</visible>
			</control>
		</control>
	</controls>
</window>
