	<controls>
		<control type="image">
			<include>screen_Dimensions</include>
			<texture border="16">overlays/vignette_full.png</texture>
			<visible>Window.IsActive(infodialog)</visible>
			<include>fadeinout</include>
		</control>
		<!--regular stream info-->
		<control type="group" id="0">
			<control type="image">
				<width>Screen_Width</width>
				<height>80</height>
				<texture>colorize/100.png</texture>
				<colordiffuse>base_2</colordiffuse>
			</control>
			<!--time seek-->
			<control type="group" id="6666">
				<left>20</left>
				<top>20</top>
				<!--line 1-->
				<control type="label" id="10">
					<width>1260</width>
					<label>-</label>
					<textcolor>Color1</textcolor>
					<include>detail_Sub_large</include>
				</control>
				<!--line 2-->
				<control type="label" id="11">
					<top>50</top>
					<width>1260</width>
