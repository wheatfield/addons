<?xml version="1.0" encoding="utf-8"?>
<includes>
	<!--BANNERS SMALL GRID-->
	<include name="view_Banner-ContainerCommons">
		<control type="image">
			<width>572</width>
			<height>117</height>
			<include>art_Frame-nf</include>
		</control>
		<control type="group">
			<left>7</left>
			<top>7</top>
			<control type="image">
				<width>558</width>
				<height>103</height>
				<texture background="true">thumbs/default_Banner.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<centerleft>279</centerleft>
				<centertop>51.5</centertop>
				<width>72</width>
				<height>72</height>
				<include>art_DefaultIcon</include>
			</control>
			<control type="image">
				<centerleft>279</centerleft>
				<centertop>51.5</centertop>
				<texture background="true">$VAR[art:Banner]</texture>
				<aspectratio align="center" aligny="center">scale</aspectratio>
