<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">8000</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<control type="group">
			<include>transition_Content</include>
			<!--images-->
			<control type="group">
				<left>20</left>
				<top>20</top>
				<control type="image">
					<width>466</width>
					<height>466</height>
					<texture fallback="thumbs/default_Square.png">$INFO[ListItem.Art(thumb)]</texture>
					<bordertexture border="7">frames/frame-nf.png</bordertexture>
					<bordersize>7</bordersize>
					<aspectratio align="center" aligny="center">scale</aspectratio>
					<visible>Container.Content(albums)</visible>
				</control>
				<control type="image">
					<width>466</width>
					<height>680</height>
					<texture fallback="thumbs/default_Portrait.png">$INFO[ListItem.Art(thumb)]</texture>
					<bordertexture border="7">frames/frame-nf.png</bordertexture>
					<bordersize>7</bordersize>
					<aspectratio align="center" aligny="top">scale</aspectratio>
					<visible>Container.Content(artists)</visible>
				</control>
				<control type="image">
					<centerleft>233</centerleft>
					<top>486</top>
					<width>160</width>
					<height>72</height>
					<aspectratio align="center">keep</aspectratio>
					<colordiffuse>Color1</colordiffuse>
					<texture>$INFO[Listitem.Property(Album_Label),flags/labels/,.png]</texture>
					<visible>!IsEmpty(Listitem.Property(Album_Label))</visible>
				</control>
			</control>
			<!--header-->
			<control type="grouplist">
				<left>520</left>
				<top>30</top>
				<height>900</height>
				<itemgap>0</itemgap>
				<control type="label">
					<width>720</width>
					<height>27</height>
					<label>$INFO[ListItem.Album]</label>
					<include>detail_Header</include>
					<visible>Container.Content(albums)</visible>
				</control>
				<control type="label">
					<label>$INFO[ListItem.Artist]</label>
					<width>720</width>
					<height>50</height>
					<include>detail_Sub</include>
					<visible>Container.Content(albums)</visible>
				</control>
				<control type="label">
					<width>720</width>
					<height>27</height>
					<label>$INFO[ListItem.Artist]</label>
					<include>detail_Header</include>
					<visible>Container.Content(artists)</visible>
				</control>
				<control type="label">
					<label fallback="31145">$INFO[ListItem.Genre]</label>
					<width>720</width>
					<height>50</height>
					<include>detail_Sub</include>
					<visible>Container.Content(artists)</visible>
				</control>
				<!--info container-->
				<control type="grouplist" id="1000">
					<orientation>vertical</orientation>
					<height>325</height>
					<itemgap>0</itemgap>
					<!--genre-->
					<control type="group">
						<width>720</width>
						<height>24</height>
						<visible>!IsEmpty(ListItem.Genre) + !Container.Content(artists)</visible>
						<control type="label">
							<width>720</width>
							<label>$LOCALIZE[515] [COLOR=Color1]$INFO[ListItem.Genre][/COLOR]</label>
							<include>detail_Sub</include>
						</control>
					</control>
					<!--moods-->
					<control type="group">
						<width>720</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Property(Album_Mood))</visible>
						<control type="label">
							<width>720</width>
							<label>$LOCALIZE[175] [COLOR=Color1]$INFO[ListItem.Property(Album_Mood)][/COLOR]</label>
							<include>detail_Sub</include>
						</control>
					</control>
					<!--styles-->
					<control type="group">
						<width>720</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Property(Album_Style))</visible>
						<control type="label">
							<width>720</width>
							<label>$LOCALIZE[176] [COLOR=Color1]$INFO[ListItem.Property(Album_Style)][/COLOR]</label>
							<include>detail_Sub</include>
						</control>
					</control>
					<!--themes-->
					<control type="group">
						<width>720</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Property(Album_Theme))</visible>
						<control type="label">
							<width>720</width>
							<label>$LOCALIZE[21895] [COLOR=Color1]$INFO[ListItem.Property(Album_Theme)][/COLOR]</label>
							<include>detail_Sub</include>
						</control>
					</control>
					<!--type-->
					<control type="group">
						<width>720</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Property(Album_Type))</visible>
						<control type="label">
							<width>720</width>
							<label>$LOCALIZE[146] [COLOR=Color1]$INFO[ListItem.Property(Album_Type)][/COLOR]</label>
							<include>detail_Sub</include>
						</control>
					</control>
					<!--label-->
					<control type="group">
						<width>720</width>
						<height>22</height>
						<visible>!IsEmpty(Listitem.Property(Album_Label))</visible>
						<control type="label">
							<width>720</width>
							<label>$LOCALIZE[21899] [COLOR=Color1]$INFO[Listitem.Property(Album_Label)][/COLOR]</label>
							<include>detail_Sub</include>
						</control>
					</control>
					<!--album count-->
					<control type="group">
						<width>720</width>
						<height>22</height>
						<visible>Container.Content(artists)</visible>
						<control type="label">
							<width>720</width>
							<label>$LOCALIZE[132] [COLOR=Color1]$INFO[Container(50).NumItems] $VAR[info:AlbumCount][/COLOR]</label>
							<include>detail_Sub</include>
						</control>
					</control>
					<!--origin-->
					<control type="group">
						<width>720</width>
						<height>22</height>
						<visible>![IsEmpty(ListItem.Property(Artist_Born)) + IsEmpty(ListItem.Property(Artist_Died)) + IsEmpty(ListItem.Property(Artist_Formed)) + IsEmpty(ListItem.Property(Artist_Disbanded))]</visible>
						<control type="label">
							<width>720</width>
							<label>$VAR[information:Origin.Prefix] [COLOR=Color1]$VAR[information:Origin][/COLOR]</label>
							<include>detail_Sub</include>
						</control>
					</control>
					<!--mood-->
					<control type="group">
						<width>720</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Property(Artist_Mood))</visible>
						<control type="label">
							<width>720</width>
							<label>$LOCALIZE[175] [COLOR=Color1]$INFO[ListItem.Property(Artist_Mood)][/COLOR]</label>
							<include>detail_Sub</include>
						</control>
					</control>
					<control type="group">
						<width>720</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Property(Artist_Style))</visible>
						<control type="label">
							<width>720</width>
							<label>$LOCALIZE[176] [COLOR=Color1]$INFO[ListItem.Property(Artist_Style)][/COLOR]</label>
							<include>detail_Sub</include>
						</control>
					</control>
					<!--instruments-->
					<control type="group">
						<width>720</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Property(Instruments))</visible>
						<control type="label">
							<width>720</width>
							<label>$LOCALIZE[21892] [COLOR=Color1]$INFO[ListItem.Property(Instruments)][/COLOR]</label>
							<include>detail_Sub</include>
						</control>
					</control>
					<!--active-->
					<control type="group">
						<width>720</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Property(Artist_YearsActive))</visible>
						<control type="label">
							<width>720</width>
							<label>$LOCALIZE[21898] [COLOR=Color1]$INFO[ListItem.Property(Artist_YearsActive)][/COLOR]</label>
							<include>detail_Sub</include>
						</control>
					</control>
					<!--duration-->
					<control type="group">
						<width>720</width>
						<height>22</height>
						<visible>System.HasAddon(script.skin.info.service) + !IsEmpty(Window(Home).Property(Album.Songs.Duration))</visible>
						<control type="label">
							<width>720</width>
							<label>$LOCALIZE[180] [COLOR=Color1]$INFO[Window(Home).Property(Album.Songs.Duration)][/COLOR]</label>
							<include>detail_Sub</include>
						</control>
					</control>
					<!--totals-->
					<control type="group">
						<width>720</width>
						<height>22</height>
						<visible>System.HasAddon(script.skin.info.service) + !IsEmpty(Window(Home).Property(Album.Songs.Count))</visible>
						<control type="label">
							<width>720</width>
							<label>$LOCALIZE[20161] [COLOR=Color1]$INFO[Window(Home).Property(Album.Songs.Count)] $VAR[info:SongCount] ($INFO[Window(Home).Property(Album.Songs.Discs)] $VAR[info:DiscCount])[/COLOR]</label>
							<include>detail_Sub</include>
						</control>
					</control>
					<!--path-->
					<control type="group">
						<width>720</width>
						<height>42</height>
						<visible>!IsEmpty(ListItem.Path)</visible>
						<control type="label">
							<width>720</width>
							<label>$LOCALIZE[573] [COLOR=Color1]$INFO[ListItem.Path][/COLOR]</label>
							<include>detail_Sub</include>
						</control>
					</control>
				</control>
				<!--button area-->
				<control type="grouplist" id="8000">
					<height>50</height>
					<width>720</width>
					<itemgap>5</itemgap>
					<orientation>horizontal</orientation>
					<!--browse-->
					<control type="group">
						<width>125</width>
						<control type="button" id="8001">
							<label>$LOCALIZE[1024]</label>
							<onclick>Close</onclick>
							<onleft>8007</onleft>
							<onright>8002</onright>
							<include>column_Button</include>
						</control>
					</control>
					<!--tracks-->
					<control type="group">
						<width>125</width>
						<control type="button" id="8002">
							<label>$LOCALIZE[182]</label>
							<onclick>SendClick(2001,5)</onclick>
							<onleft>8001</onleft>
							<onright>8007</onright>
							<ondown>50</ondown>
							<include>column_Button</include>
						</control>
					</control>
					<!--manage-->
					<control type="group">
						<width>125</width>
						<visible>!SubString(Container.FolderPath,plugin://) + !Skin.HasSetting(global.kiosk)</visible>
						<control type="button" id="8007">
							<label>$LOCALIZE[16106]</label>
							<onclick>ActivateWindow(62)</onclick>
							<include>column_Button</include>
							<onleft>8002</onleft>
							<onright>8001</onright>
						</control>
					</control>
				</control>
				<!--plot-->
				<control type="textbox" id="400">
					<width>720</width>
					<height>325</height>
					<label>$VAR[media:Plot]</label>
					<include>detail_Text</include>
					<visible allowhiddenfocus="true">![Control.HasFocus(8002) | Control.HasFocus(50)]</visible>
				</control>
				<!--track list-->
				<control type="list" id="50">
					<width>645</width>
					<height>264</height>
					<onleft>8001</onleft>
					<onright>8007</onright>
					<onup>50</onup>
					<ondown>50</ondown>
					<scrolltime tween="Cubic" easing="Out">200</scrolltime>
					<visible allowhiddenfocus="true">Control.HasFocus(8002) | Control.HasFocus(50)</visible>
					<itemlayout width="645" height="44">
						<control type="image">
							<width>645</width>
							<include>column_ListButton</include>
						</control>
						<control type="label">
							<left>15</left>
							<width>615</width>
							<label>$INFO[ListItem.Label]</label>
							<include>column_ListButtonLabel</include>
						</control>
						<control type="label">
							<right>15</right>
							<width>100</width>
							<label>$INFO[ListItem.Duration]</label>
							<align>right</align>
							<textcolor>Color3</textcolor>
							<include>column_ListButtonLabel</include>
						</control>
					</itemlayout>
					<focusedlayout width="645" height="44">
						<control type="group">
							<visible>Control.HasFocus(8002)</visible>
							<control type="image">
								<width>645</width>
								<include>column_ListButton</include>
							</control>
							<control type="label">
								<width>645</width>
								<label>$INFO[ListItem.Label]</label>
								<textoffsetx>15</textoffsetx>
								<include>column_ListButtonLabel</include>
							</control>
							<control type="label">
								<right>15</right>
								<width>100</width>
								<label>$INFO[ListItem.Duration]</label>
								<align>right</align>
								<textcolor>Color3</textcolor>
								<include>column_ListButtonLabel</include>
							</control>
						</control>
						<control type="group">
							<visible>!Control.HasFocus(8002)</visible>
							<control type="image">
								<width>645</width>
								<include>column_ListButtonFocus</include>
							</control>
							<control type="label">
								<width>645</width>
								<label>$INFO[ListItem.Label]</label>
								<textoffsetx>15</textoffsetx>
								<textcolor>Color5</textcolor>
								<include>column_ListButtonLabel</include>
							</control>
							<control type="label">
								<right>15</right>
								<width>100</width>
								<label>$INFO[ListItem.Duration]</label>
								<align>right</align>
								<textcolor>Color5</textcolor>
								<include>column_ListButtonLabel</include>
							</control>
						</control>
					</focusedlayout>
				</control>
			</control>
		</control>
	</controls>
</window>
