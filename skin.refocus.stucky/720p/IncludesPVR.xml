<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="progress_PVR">
		<control type="group">
			<visible>!SubString(ListItem.Icon,default)</visible>
			<control type="image">
				<width>28</width>
				<height>28</height>
				<colordiffuse>Color3</colordiffuse>
				<texture>$VAR[pvr:Progress]</texture>
				<visible>!ListItem.IsRecording</visible>
			</control>
			<control type="image">
				<width>28</width>
				<height>28</height>
				<colordiffuse>rec1</colordiffuse>
				<texture>$VAR[pvr:Progress]</texture>
				<visible>ListItem.IsRecording</visible>
			</control>
		</control>
	</include>
	<include name="progress_PVR-fo">
		<control type="group">
			<visible>!SubString(ListItem.Icon,default)</visible>
			<control type="image">
				<width>28</width>
				<height>28</height>
				<colordiffuse>Color4</colordiffuse>
				<texture>$VAR[pvr:Progress]</texture>
				<visible>!ListItem.IsRecording</visible>
			</control>
			<control type="image">
				<width>28</width>
				<height>28</height>
				<colordiffuse>rec2</colordiffuse>
				<texture>$VAR[pvr:Progress]</texture>
				<visible>ListItem.IsRecording</visible>
			</control>
		</control>
	</include>
	<include name="status_PVR">
		<top>7</top>
		<control type="image">
			<width>28</width>
			<height>28</height>
			<texture>pvr/status/timer.png</texture>
			<colordiffuse>Color3</colordiffuse>
			<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
		</control>
		<control type="image">
			<width>28</width>
			<height>28</height>
			<texture>pvr/status/timer.png</texture>
			<colordiffuse>rec1</colordiffuse>
			<visible>ListItem.HasTimer + ListItem.IsRecording</visible>
		</control>
		<control type="image">
			<width>28</width>
			<height>28</height>
			<texture>pvr/status/recording.png</texture>
			<colordiffuse>rec1</colordiffuse>
			<visible>ListItem.IsRecording</visible>
		</control>
	</include>
	<include name="status_PVR-fo">
		<top>7</top>
		<control type="image">
			<width>28</width>
			<height>28</height>
			<texture>pvr/status/timer.png</texture>
			<colordiffuse>Color4</colordiffuse>
			<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
		</control>
		<control type="image">
			<width>28</width>
			<height>28</height>
			<texture>pvr/status/timer.png</texture>
			<colordiffuse>rec2</colordiffuse>
			<visible>ListItem.HasTimer + ListItem.IsRecording</visible>
		</control>
		<control type="image">
			<width>28</width>
			<height>28</height>
			<texture>pvr/status/recording.png</texture>
			<colordiffuse>rec2</colordiffuse>
			<visible>ListItem.IsRecording</visible>
		</control>
	</include>
</includes>
